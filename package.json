{
  "name": "markdown-post-parser",
  "version": "0.0.1",
  "description": "Parser for building blogs in Markdown.",
  "keywords": [
    "markdown",
    "blog",
    "cli"
  ],
  "author": "kimulaco",
  "license": "MIT",
  "main": "dist/markdown-post-parser.js",
  "bin": {
    "mpp": "bin/mpp.js"
  },
  "scripts": {
    "build": "webpack",
    "dev": "webpack -w",
    "test": "npm-run-all -s lint test:jest",
    "test:jest": "jest",
    "test:cli": "mpp -i ./test/src -o ./test/dist/cli/blog.json -s ./test/dist/cli/static",
    "lint": "eslint -c .eslintrc.js src/**.ts test/**/**.ts bin/**.js webpack.config.js",
    "self-link": "npm link && npm link markdown-post-parser"
  },
  "dependencies": {
    "commander": "^2.20.0",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "lodash": "^4.17.11",
    "markdown-it": "^8.4.2",
    "markdown-it-meta": "0.0.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "@typescript-eslint/typescript-estree": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.0",
    "typescript": "^3.4.5",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2"
  }
}
